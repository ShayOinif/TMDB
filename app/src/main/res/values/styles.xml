<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TmdbBottomNavigationStyle">
        <item name="itemIconTint">@color/yellow</item>
        <item name="itemTextColor">@color/yellow</item>
        <item name="android:background">@color/black_primary</item>
    </style>

    <style name="TmdbRatingBarStyle" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:progressBackgroundTint">@color/white</item>
    </style>

    <style name="TmdbFragmentStyle">
        <item name="android:background">@color/black_secondary</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>

    <style name="TmdbPosterImageViewStyle">
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>